<div class="row">
  <div class="container">
    <h1>Registered Users</h1>
    <table class="table">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>View Info</th>
      </tr>

      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.password %></td>
          <td><%= link_to 'Show', user_path(user) %></td>
        </tr>
      <% end %>
    </table>
    <p>
      <%= link_to "Add New User", new_user_path, :class => "btn btn-success btn-lg" %>
    </p>




  </div>
</div>
